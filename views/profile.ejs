<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/2.5.3/css/bootstrap-colorpicker.css"
        rel="stylesheet">
    <script src="https://code.jquery.com/jquery-2.2.2.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script
        src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-colorpicker/2.5.3/js/bootstrap-colorpicker.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/3.0.1/jspdf.umd.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sql.js/1.5.0/sql-wasm.js"></script>

    <link rel="stylesheet" href="../public/styles/style.css">
</head>

<body>
    <header>
        <div class="container">
            <div class="container">
                <div class="row">
                    <div class="col-sm">
                        <p>Js Editor</p>
                    </div>
                    <div class="col-sm">
                        <a onclick="location.href='/'">Главная</a>
                    </div>
                    <div class="col-sm">
                        <a onclick="location.href='/login'">Профиль</a>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                <p>
                    Фотографии от <%=name %>
                </p>
                <form action="/delete" method="post">
                    <button name="delete">Удалить профиль</button>
                </form>
                <form action="/login" method="get">
                    <button name="logout"
                        onclick="document.cookie = 'username=; Max-Age=-1;'; return true;">Выйти</button>
                </form>
            </div>
            <div>
                <% tripl.forEach(tri=> { %>
                    <div class="row">
                        <% tri.forEach(photo=> { %>
                            <div class="col-sm photo">
                                <form method="post">
                                    <input formaction="/deletephoto" type="submit" value="Удалить фото" />
                                    <input formaction="/openphoto" type="submit" name="action" value="Открыть фото">
                                    <textarea name="namephoto" style="display: none;"><%= photo %></textarea>
                                    <img class="w-100 shadow-1-strong rounded mb-4" src="<%= photo %>" alt="Фотография">
                                </form>
                            </div>
                            <% }); %>
                    </div>
                    <% }); %>
            </div>
    </main>
    <footer>
        <p>hhhh</p>
    </footer>
</body>